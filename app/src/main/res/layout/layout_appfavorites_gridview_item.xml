<?xml version="1.0" encoding="utf-8"?>
<com.htc.luminaos.widget.RLRelativelayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appsfavor"
    android:layout_width="@dimen/x_210"
    android:layout_height="@dimen/y_170"
    android:minWidth="@dimen/x_210"
    android:minHeight="@dimen/y_170"
    >

    <ImageView
        android:id="@+id/addapp_icon_iv"
        android:layout_width="@dimen/x_100"
        android:layout_height="@dimen/y_100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x_10" />

    <ImageView
        android:id="@+id/appapp_iv"
        android:layout_width="@dimen/x_60"
        android:layout_height="@dimen/y_60"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_addpp_select"
        android:visibility="gone" />

    <TextView
        android:id="@+id/addapp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addapp_icon_iv"
        android:layout_marginLeft="@dimen/x_10"
        android:layout_marginTop="@dimen/x_10"
        android:layout_marginRight="@dimen/x_10"
        android:gravity="center"
        android:textColor="@color/white"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="@dimen/x_24" />
</com.htc.luminaos.widget.RLRelativelayout>
